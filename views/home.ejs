<link rel="stylesheet" href="/css/home.css">
<h1>Codeial / <%= title %></h1>
 
<section id="feed-posts">
    <h4>Posts</h4>
    <% if (locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="post">
        <textarea name="content" cols="30" rows="3" placeholder="Enter your text here..." required></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>

    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>
               
              <%-include('_post')-%>
                
            <% } %>
        </ul>
    </div>
    
</section>